<%= form_for [refinery, :ruby_projects_admin, @ruby_project] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @ruby_project,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "ruby_projects/ruby_project" -%>
  </div>

  <div class='field'>
    <%= f.label :screenshot -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :screenshot_id,
               :image => @ruby_project.screenshot,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :complete -%>
    <%= f.check_box :complete, :checked => @ruby_project[:complete] -%>
  </div>

  <div class='field'>
    <%= f.label :created_on -%>
    <%= f.date_select :created_on -%>
  </div>

  <div class='field'>
    <%= f.label :updated_on -%>
    <%= f.date_select :updated_on -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.ruby_projects.admin.ruby_projects.ruby_project'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @ruby_project.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
