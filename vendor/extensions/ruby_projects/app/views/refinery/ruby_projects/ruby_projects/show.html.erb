<section id="body_content">
  <section id="body">
    <div id="ruby_project">
      <%= image_fu @ruby_project.screenshot, "400x400", class: "image-align-left" %>
      <h1><%= @ruby_project.name %></h1>
      <p>
        <b>Started:</b> <%= @ruby_project.created_on %>
      </p>
      <p>
        <b>Last Update:</b> <%= @ruby_project.updated_on %>
      </p>
      <%= raw @ruby_project.description %>
      <p class="back"><%= link_to "Back to ruby_projects", refinery.ruby_projects_ruby_projects_path %></p>
    </div>
  </section>
  <section id="side_body">
  <h2>Other</h2>
  <% @ruby_projects.each do |ruby_project| %>
        <li>
          <%= link_to ruby_project.name, refinery.ruby_projects_ruby_project_path(ruby_project) %>
        </li>
      <% end %>
  </section>
</section>